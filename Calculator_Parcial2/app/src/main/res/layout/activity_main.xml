<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labredes10.calculator_parcial2.MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tableLayout"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button7"
                />

            <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button8" />

            <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button9" />

            <Button
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/buttonDividir" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button4" />

            <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button5" />

            <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button6" />

            <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/buttonMultiplicar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button1" />

            <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button2" />

            <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button3" />

            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/buttonRestar" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/button0" />

            <Button
                android:text="% ."
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/buttonPorciento" />

            <Button
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/buttonIgual" />

            <Button
                android:text="+"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:id="@+id/buttonSumar" />


        </TableRow>
    </TableLayout>

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:textAlignment="viewEnd"
        android:textSize="50dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="CALCULATOR"
        android:id="@+id/textView3"
        android:layout_alignParentStart="true"
        android:background="@color/fondo"/>

</RelativeLayout>
